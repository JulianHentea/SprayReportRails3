<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
			
		<p>
		  <%= f.text_field :title,  :style => "width:605px;",placeholder: "Enter a title..." %>
		</p>
		<p>
    	<%= f.text_area :content,  :style => "width:605px; height: 140px;", placeholder: "Compose new a new story..." %>
  	</p>
		<div class="field">
		  <%= f.text_field :tag_list,  :style => "width:605px;", placeholder: "Tags (separated by commas)"%>
		</div>
	</div>
  <%= f.submit "Update your story", class: "btn btn-large btn-primary" %>
<% end %>