<% if signed_in? %>
<div class="row">
	<div class="span4 offset">
		<a href="<%= user_path(current_user) %>"><%= gravatar_for current_user, size: 52 %></a>
		<h1><%= current_user.name %></h1>
		<h4><%= pluralize(current_user.posts.count, "Story") %></h4>

		<% @user ||= current_user %>
	<div class="user-stats">
		<strong> 
			<a href="<%= following_user_path(@user) %>">
			<span id="following" class="stat"><%= @user.following.count %> following </a>

			<a href="<%= followers_user_path(@user) %>">
			<span id="followers" class="stat"><%= pluralize(@user.followers.count, "follower") %>
		</strong></a>
	</div>
</div>

<div class="span3 bs-docs-sidebar">
    <ul class="nav nav-list bs-docs-sidenav afix">
		<%= link_to "Home", root_path, 
					class: "btn btn-large btn-block " %>
		<%= link_to " Manage stories", current_user,
					class: "btn btn-large btn-block " %>
		<%= link_to " New Story", new_post_path, 
					class: " btn btn-large btn-block " %>
			    </ul>
			  </div>
	</div>
</div>
<% end %>



