<% provide(:title, @user.name) %>

<!-- Main Area -->
<div class="main-area">
	<div class="container">
		<div class="row">
			<%= render 'shared/page_header' %>
			<h1>Edit your story</br><small></small></h1>

				<div class="row">
	  			<div class="span6 offset1">
	    		<%= render 'follow_form' if signed_in? %>
				<div id="tag_cloud">
				  <% tag_cloud Article.tag_counts, %w[s m l] do |tag, css_class| %>
				    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
				  <% end %>
				</div>
				
		    	<% if @user.posts.any? %>
	     		<h3>posts (<%= @user.posts.count %>)</h3>
					<ol class="posts">
	     			<%= render @posts %>
		    	</ol>
	      	<%= will_paginate @posts %>
		    	<% end %>
		 </div>
	</div>
	<!-- End Main Area -->
</div>

