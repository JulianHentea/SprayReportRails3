<li>	
  <p> 
    <h5><%= link_to post.title , post_path(post) %></h5>
 	  <span class="content"><%= truncate(strip_tags(post.content), length: 80 ) %></span>  
	  <span class="timestamp">
	    Posted <%= time_ago_in_words(post.created_at) %> ago.
	  </span>
  </p>  
  <p>	
    <% if current_user?(post.user) %>
	<%= link_to "Edit your story.", edit_post_path(post) %> or
	<%= link_to "Delete your story.", post, method: :delete,
	                               data: { confirm: 'You sure?' },
	                               title: post.content %>
	 <% end %>
  </p>
</li>