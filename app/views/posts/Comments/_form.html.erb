<h3>Post a Comment</h3>

<%= form_for [ @post, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Your Name" %><br/>
    <%= f.text_field :author_name, :style => "width:750px;" %>
  </p>
  <p>
    <%= f.label :body, "Your Comment"%><br/>
    <%= f.text_area :body, :style => "width:750px; height: 140px;", placeholder: "Write a comment..." %>
  </p>
  <p>
    <%= f.submit "Post your comment", class: "btn btn-large btn-primary" %>
  </p>
<% end %>
